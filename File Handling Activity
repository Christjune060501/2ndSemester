#include <stdio.h>

int main ()
{
  FILE * fptr;
  int x,y;
  char str[100];
  char fname[20];
  char str1;
  
	printf("\n\n Write a program that append multiple lines in a text file :\n");
	printf("------------------------------------------------------\n"); 
	printf(" Input the file location : ");
	scanf("%s",fname);		
    fptr = fopen(fname, "a"); 
    printf(" Input the number of lines to be appended : ");
    scanf("%d", &y);
    printf(" The lines are : \n");  
    for(x = 0; x < y+1;x++)
    {
    fgets(str, sizeof str, stdin);
    fputs(str, fptr);
  }
  fclose (fptr);
//----- Read the file after appended ------- 
	fptr = fopen (fname, "r");  
	printf("\n Inside of the text.txt %s is  :\n",fname);
	str1 = fgetc(fptr);
	while (str1 != EOF)
		{
			printf ("%c", str1);
			str1 = fgetc(fptr);
		}
    printf("\n\n");
    fclose (fptr);
//------- End of reading ------------------
  return 0;
}
