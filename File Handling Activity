#include <stdio.h>

int main ()
{
  FILE * folder;
  int x,y;
  char str[100];
  char fname[20];
  char str1;
  
	printf("\n\n A program that append multiple lines in a text file :\n\n");
	printf(" Input the file location : ");
	scanf("%s",fname);		
   
    folder = fopen(fname, "a"); 
    printf(" Input number of lines to be appended : ");
    scanf("%d", &y);
    printf(" The lines are : \n");  
   
    for(x = 0; x < y+1;x++)
    {
    fgets(str, sizeof str, stdin);
    fputs(str, folder);
  }
  
  fclose (folder);
//----- Read the file after appended ------- 
	folder = fopen (fname, "r");  
	printf("\n Inside of the %s is: ",fname);
	str1 = fgetc(folder);
	while (str1 != EOF)
		{
			printf ("%c", str1);
			str1 = fgetc(folder);
		}
    printf("\n\n");
    fclose (folder);
//------- End of reading ------------------
  return 0;
}
